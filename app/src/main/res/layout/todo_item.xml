<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/todo_item_cardview"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <ImageView
            android:layout_width="45dp" android:layout_height="45dp"
            android:id="@+id/todo_item_image"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"

    />
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/listPreferredItemHeight"
            android:layout_marginLeft="75dp"
            android:gravity="center"
    
    >
        
        <TextView
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                tools:ignore="MissingPrefix"
                android:id="@+id/todo_item_text"
                android:gravity="start|bottom"
                android:lines="1"
                android:textColor="@color/secondary_text"
                android:text="@string/item_default_text"
                android:textSize="16sp"
        />
        
        <TextView
                android:id="@+id/todo_item_time"
                android:layout_below="@+id/todo_item_text"
                android:text="25 Aug 2017,16:25"
                android:textColor="@color/accent"
                android:textSize="12sp"
                android:gravity="start|center"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    
    </RelativeLayout>

</android.support.v7.widget.CardView>